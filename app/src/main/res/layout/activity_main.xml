<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorHome"
    android:orientation="vertical"
    tools:context="com.m6code.abujacityguide.MainActivity">

    <FrameLayout
        android:id="@+id/fl_hotels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@color/colorHotels">

        <TextView
            android:id="@+id/tv_hotels"
            style="@style/categoryStyle"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/hotels" />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/fl_parks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@color/colorParks">

        <TextView
            android:id="@+id/tv_parks"
            style="@style/categoryStyle"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/parks" />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/fl_restaurants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@color/colorRestaurants">

        <TextView
            android:id="@+id/tv_restaurants"
            style="@style/categoryStyle"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/restaurants" />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/fl_tourist_site"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@color/colorTourist">

        <TextView
            android:id="@+id/tv_tourist_site"
            style="@style/categoryStyle"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/tourist_site" />
    </FrameLayout>

</LinearLayout>
