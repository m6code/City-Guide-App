<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.m6code.abujacityguide.HotelsActivity">

    <TextView
        android:id="@+id/tv_place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:textAllCaps="false"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="monospace"
        tools:text="Hotel Name" />

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/iv_place_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:src="@drawable/grand_ibro" />

    <TextView
        android:id="@+id/tv_place_discription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/decription_hotel_one"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:paddingTop="16dp"
        android:paddingBottom="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Contact Information"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:autoLink="map"
            android:drawableStart="@drawable/ic_location"
            android:drawablePadding="4dp"
            android:id="@+id/tv_place_location"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="top"
            android:layout_height="wrap_content"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:text="@string/location_hotel_one" />

        <TextView
            android:autoLink="web"
            android:drawableStart="@drawable/ic_link"
            android:drawablePadding="2dp"
            android:id="@+id/tv_place_website"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:layout_height="wrap_content"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:text="@string/book_hotel_one" />

    </LinearLayout>


</LinearLayout>
