<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.m6code.abujacityguide">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HotelsActivity"
            android:label="@string/hotels"
            android:parentActivityName=".MainActivity">

        </activity>

        <activity
            android:name=".ParksActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/parks"></activity>
        <activity
            android:name=".RestaurantsActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/restaurants"></activity>
        <activity
            android:name=".TouristsActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/tourist_site"></activity>
    </application>

</manifest>